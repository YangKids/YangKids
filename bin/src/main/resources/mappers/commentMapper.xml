<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yangkids.model.dao.CommentDao">

	<!-- 댓글 목록 조회 -->
	<select id="selectAll" parameterType="int" resultType="Comment">
		SELECT * FROM Comment WHERE articleId=${articleId};
	</select>

	<!-- 댓글 등록 -->
	<insert id="insertComment" parameterType="Comment">
		INSERT INTO Comment(articleId, content, writerId)
		VALUES
		(#{articleId}, #{content}, #{writerId})
	</insert>

	<!-- 댓글 삭제 -->
	<delete id="deleteComment" parameterType="int">
		DELETE FROM Comment
		WHERE commentId = #{commentId}
	</delete>

	<!-- 댓글 수정 -->
	<update id="updateComment" parameterType="Comment">
		UPDATE Comment SET content=#{content}, isModified=1
		WHERE commentId=#{commentId}
	</update>

</mapper>